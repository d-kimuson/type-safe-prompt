{
  "name": "type-safe-prompt",
  "description": "A lightweight library for handling prompts with embeddable variables in a type-safe manner",
  "version": "0.0.3",
  "author": "d-kimuson",
  "bugs": "https://github.com/d-kimuson/type-safe-prompt/issues",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@actions/github": "6.0.1",
    "@biomejs/biome": "^2.3.2",
    "@octokit/rest": "22.0.1",
    "@types/node": "^24.9.2",
    "better-typescript-lib": "^2.12.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "lefthook": "2.0.2",
    "npm-run-all2": "^8.0.4",
    "release-it": "^19.0.5",
    "release-it-pnpm": "^4.6.6",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  },
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "node": "./dist/index.cjs",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "homepage": "https://github.com/d-kimuson/type-safe-prompt#readme",
  "keywords": [
    "llm",
    "prompt",
    "type-safe",
    "typescript"
  ],
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd",
  "repository": "d-kimuson/type-safe-prompt.git",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch --clean=false",
    "lint": "run-s 'lint:*'",
    "lint:biome-format": "biome format .",
    "lint:biome-lint": "biome check .",
    "fix": "run-s 'fix:*'",
    "fix:biome-format": "biome format --write .",
    "fix:biome-lint": "biome check --write --unsafe .",
    "release": "release-it",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "tsc -p ./tsconfig.json --noEmit"
  },
  "sideEffects": false,
  "type": "module"
}

{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // for node22
    "lib": ["es2023"],
    "module": "ES2022",
    "target": "es2022",
    "moduleResolution": "Bundler",

    // typecheck
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    // js
    "allowJs": true,
    "checkJs": true,
    "noEmit": true
  },
  "include": ["tsup.config.ts"],
  "exclude": ["node_modules", "src"]
}
